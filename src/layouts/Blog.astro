---
import type { MarkdownLayoutProps } from 'astro';
import Layout from './Layout.astro';

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  poster: string;
  subtitle: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---
<Layout title="Fra Katerina | Blog">
  <figure class="figure">
    <img
      src={poster}
      alt=""
      width="100%"
      height="480px"
      class="figure__image"
    />
    <figcaption class="figure__caption">
      Poster image for {title.toLowerCase()}
    </figcaption>
  </figure>

  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <slot />
</Layout>

<style>
  h1 + h2 {
    margin-bottom: 3rem;
  }

  .figure {
    margin: 0;
  }

  .figure__image {
    max-width: 100%;
    border-radius: 10px;
  }

  .figure__caption {
    font-size: 0.9rem;
  }
</style>